#!/usr/bin/env tauraro
# Comprehensive test of working features

def test_basic_math():
    print("=== Math Test ===")
    a = 5
    b = 3
    c = a + b
    print("Addition result:")
    print(c)
    d = c * 2
    print("Multiplication result:")
    print(d)
    print("Math test done")

def test_loops():
    print("=== Loops Test ===")
    for i in range(3):
        print("Loop iteration:")
        print(i)
    print("Loops test done")

def test_strings():
    print("=== Strings Test ===")
    msg = "hello"
    upper_msg = msg.upper()
    print("Uppercase:")
    print(upper_msg)
    len_msg = len(msg)
    print("Length:")
    print(len_msg)
    print("Strings test done")

def test_lists():
    print("=== Lists Test ===")
    nums = [10, 20, 30]
    print("List items:")
    for num in nums:
        print(num)
    print("Lists test done")

# Run all tests
test_basic_math()
test_loops()
test_strings()
test_lists()
print("=== ALL TESTS COMPLETE ===")
