#!/usr/bin/env tauraro
# Test: Classes and OOP

class Person:
    def __init__(self, name, age):
        self.name = name
        self.age = age
    
    def greet(self):
        return f"Hello, I'm {self.name} and I'm {self.age} years old"
    
    def birthday(self):
        self.age = self.age + 1
        return f"Happy birthday! {self.name} is now {self.age}"

class Student(Person):
    def __init__(self, name, age, student_id):
        # Call parent __init__
        super().__init__(name, age)
        self.student_id = student_id
    
    def get_info(self):
        return f"Student {self.name} (ID: {self.student_id}, Age: {self.age})"

def test_classes():
    print("=== Classes and OOP ===")
    
    # Create instance
    person = Person("Alice", 25)
    print(person.greet())
    
    # Modify attribute
    person.age = 26
    print(f"After manual update: {person.greet()}")
    
    # Call method
    print(person.birthday())
    
    # Inheritance
    student = Student("Bob", 20, "S12345")
    print(student.greet())
    print(student.get_info())
    
    # Inheritance method call
    student.birthday()
    print(student.get_info())

test_classes()
