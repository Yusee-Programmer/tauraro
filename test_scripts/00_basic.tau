#!/usr/bin/env tauraro
# Test: Basic arithmetic and control flow

def test_basic():
    print("=== Basic Operations ===")
    
    # Variables and arithmetic
    x = 10
    y = 20
    z = x + y
    print(f"Sum: {z}")
    
    # If statements
    if z > 25:
        print("z is greater than 25")
    elif z > 15:
        print("z is between 16 and 25")
    else:
        print("z is 15 or less")
    
    # For loops
    print("Numbers 1-5:")
    for i in range(5):
        print(f"  {i}")
    
    # While loops
    count = 0
    print("While loop:")
    while count < 3:
        print(f"  Count: {count}")
        count = count + 1

test_basic()
