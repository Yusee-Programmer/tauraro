#!/usr/bin/env tauraro
# Test: Lambda and functional programming

def test_lambdas():
    print("=== Lambda and Functional Programming ===")
    
    # Lambda basic
    add = lambda x, y: x + y
    result = add(3, 4)
    print(f"Lambda add(3, 4) = {result}")
    
    # Lambda with list
    numbers = [1, 2, 3, 4, 5]
    
    # Map
    squared = list(map(lambda x: x * x, numbers))
    print(f"Squared: {squared}")
    
    # Filter
    evens = list(filter(lambda x: x % 2 == 0, numbers))
    print(f"Even numbers: {evens}")
    
    # Lambda in list comprehension
    result = [x * 2 for x in numbers]
    print(f"Doubled via comprehension: {result}")
    
    # Lambda in filter comprehension
    filtered = [x for x in numbers if x > 2]
    print(f"Numbers > 2: {filtered}")

test_lambdas()
