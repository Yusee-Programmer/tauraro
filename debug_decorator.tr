#!/usr/bin/env tauraro

# Simple decorator test - minimal version to debug the issue

def my_decorator(func):
    def wrapper(*args, **kwargs):
        print("Before")
        result = func(*args)
        print("After")
        return result
    return wrapper

@my_decorator
def greet_decorated(name):
    return f"Hello, {name}!"

print(greet_decorated("World"))
