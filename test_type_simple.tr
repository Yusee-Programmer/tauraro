# Test type() 3-argument form with methods

def greet(self):
    return f"Hello! I am a {self.__class__}"

# Create a simple class dynamically with a method
MyClass = type("MyClass", (), {"greet": greet})

print("Created class:", MyClass)
print("Class type:", type(MyClass))

# Create an instance
obj = MyClass()
print("Instance:", obj)

