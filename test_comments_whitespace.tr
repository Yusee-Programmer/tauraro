# Test 2: Comments in function definitions
def add(a, b):  # Function to add two numbers
    result = a + b  # Calculate sum
    return result  # Return the result

result = add(3, 7)  # Call function
print("add(3, 7) =", result)  # Should print 10

# Test 3: Comments in class definitions
class Calculator:  # A simple calculator class
    def __init__(self):  # Constructor
        self.value = 0  # Initial value
    
    def add(self, n):  # Add method
        self.value = self.value + n  # Update value
        return self.value  # Return new value
    
    def multiply(self, n):  # Multiply method
        self.value = self.value * n  # Multiply
        return self.value  # Return result

# Test 4: Create instance with comments
calc = Calculator()  # Create calculator
calc.add(5)  # Add 5
calc.multiply(3)  # Multiply by 3
print("Calculator result:", calc.value)  # Should be 15

