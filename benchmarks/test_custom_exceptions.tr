# Test Custom Exceptions and Exception Classes

# Test 1: Define a custom exception class
class CustomError(Exception):
    pass

# Test 2: Raise and catch custom exception
print("Test 1: Custom exception")
try:
    raise CustomError("Custom error message")
except CustomError as e:
    print("✅ Custom exception caught")

# Test 2: Exception hierarchy with custom exceptions
class ValidationError(ValueError):
    pass

print("\nTest 2: Custom exception hierarchy")
try:
    raise ValidationError("Validation failed")
except ValueError as e:
    print("✅ Custom ValidationError caught as ValueError")

# Test 3: Catch by Exception base class
print("\nTest 3: Catch custom by Exception")
try:
    raise CustomError("Another error")
except Exception as e:
    print("✅ Custom exception caught by Exception")

# Test 4: Simple Exception subclass
print("\nTest 4: Multiple exception handling")
try:
    raise ValueError("test value")
except CustomError:
    print("❌ Should not catch")
except ValueError:
    print("✅ ValueError caught correctly")

print("\n--- Custom Exception Tests Passed ---")
