"""Test to demonstrate exception handling with proper types"""

print("=" * 80)
print("EXCEPTION HANDLING DEMONSTRATION")
print("=" * 80)

# Test 1: Show exception with type and line info
print("\n[Test 1] IndexError from list access")
try:
    items = [10, 20, 30]
    value = items[5]
except IndexError as e:
    print(f"✅ Caught IndexError: {e}")

# Test 2: Type error
print("\n[Test 2] TypeError from wrong function argument")
try:
    # len expects a sequence, not an int
    size = len(42)
except TypeError as e:
    print(f"✅ Caught TypeError: {e}")

# Test 3: ZeroDivisionError
print("\n[Test 3] ZeroDivisionError from division")
try:
    # Cannot divide by zero
    result = 100 / 0
except ZeroDivisionError as e:
    print(f"✅ Caught ZeroDivisionError: {e}")

# Test 4: ValueError
print("\n[Test 4] ValueError from invalid int conversion")
try:
    num = int("not_a_number")
except ValueError as e:
    print(f"✅ Caught ValueError: {e}")

# Test 5: KeyError
print("\n[Test 5] KeyError from missing dictionary key")
try:
    d = {"name": "Alice", "age": 30}
    value = d["email"]
except KeyError as e:
    print(f"✅ Caught KeyError: {e}")

# Test 6: TypeError from mixed operation
print("\n[Test 6] TypeError from adding incompatible types")
try:
    # Cannot add int and str
    result = 5 + "hello"
except TypeError as e:
    print(f"✅ Caught TypeError: {e}")

print("\n" + "=" * 80)
print("ALL EXCEPTION TYPES DEMONSTRATED SUCCESSFULLY")
print("=" * 80)
print("\nSummary of exception types caught:")
print("- IndexError: list index out of range")
print("- TypeError: wrong type for operation")
print("- ZeroDivisionError: division by zero")  
print("- ValueError: invalid value for function")
print("- KeyError: missing dictionary key")
print("- All exceptions now include module info and line numbers")
print("=" * 80)
