# Test that control flow blocks don't create new scopes

print("=== Control Flow Scoping Tests ===\n")

# Test 1: If-block scoping
print("[1] If-block does NOT create new scope:")
if True:
    if_var = "set in if"
print("  if_var =", if_var)
print("  [PASS]")

# Test 2: Elif-else scoping
print("\n[2] Elif-else does NOT create new scope:")
x = 5
if x < 0:
    sign = "negative"
elif x == 0:
    sign = "zero"
else:
    sign = "positive"
print("  sign =", sign)
print("  [PASS]")

# Test 3: While-block scoping
print("\n[3] While-block does NOT create new scope:")
i = 0
while i < 1:
    while_var = "set in while"
    i = i + 1
print("  while_var =", while_var)
print("  [PASS]")

# Test 4: For-block scoping
print("\n[4] For-block does NOT create new scope:")
for j in [1, 2, 3]:
    for_var = "set in for"
print("  for_var =", for_var)
print("  [PASS]")

# Test 5: Nested if blocks
print("\n[5] Nested if blocks:")
if True:
    outer_if = "outer"
    if True:
        inner_if = "inner"
print("  outer_if =", outer_if)
print("  inner_if =", inner_if)
print("  [PASS]")

# Test 6: Variable reassignment in if blocks
print("\n[6] Variable reassignment in if blocks:")
val = 10
if val > 5:
    val = 20
print("  val =", val)
print("  [PASS]")

print("\n[SUCCESS] All control flow scoping tests passed!")
