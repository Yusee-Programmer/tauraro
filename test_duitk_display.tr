# Test DUITK Window Display
print("Testing DUITK Window Display...")

import duitk

print("DUITK imported successfully!")

# Test creating a window
window = duitk.create_window("Test Window - Should Appear on Screen", 400, 300)
window.show()

# Test creating controls
button = window.create_button("Click Me", 10, 10, 100, 30)
