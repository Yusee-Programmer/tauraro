# Minimal DUITK test

version = "1.0.0"
name = "DUITK"
description = "Desktop UI Toolkit for Tauraro"

class Application:
    def __init__(self):
        self.windows = []
        self.running = False
    
    def run(self):
        self.running = True
        # Main message loop
        import win32.user32
        import duitk.events
        
        msg = win32.user32.MSG()
        while self.running:
            result = duitk.events.get_message(msg, 0, 0, 0)
            if result == 0:  # WM_QUIT
                break
            duitk.events.translate_and_dispatch_message(msg)

print("DUITK - Desktop UI Toolkit loaded successfully!")