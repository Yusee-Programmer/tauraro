"""
Quick comprehensive test for Python features
"""

print("=== BASIC TYPES ===")
print(42)
print(3.14)
print("hello")
print(True)
print(None)

print("=== COLLECTIONS ===")
lst = [1, 2, 3]
print(lst)
tup = (1, 2, 3)
print(tup)
st = {1, 2, 3}
print(st)
dct = {"a": 1, "b": 2}
print(dct)

