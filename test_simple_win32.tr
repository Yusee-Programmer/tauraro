# Simple Win32 API Test
print("Testing simple Win32 API usage...")

# Load Windows libraries
try:
    load_library("user32.dll")
    print("user32.dll loaded successfully")
except Exception as e:
    print(f"Failed to load user32.dll: {e}")

try:
    load_library("kernel32.dll")
    print("kernel32.dll loaded successfully")
except Exception as e:
    print(f"Failed to load kernel32.dll: {e}")

# Define a simple MessageBox function
MessageBoxA = define_function("user32.dll", "MessageBoxA", "int32", ["pointer", "pointer", "pointer", "uint32"])
print("MessageBoxA function defined")

# Test the MessageBox function
print("Testing MessageBox...")
try:
    result = MessageBoxA(0, "Hello from Win32!", "Simple Win32 Test", 0)
    print(f"MessageBox returned: {result}")
except Exception as e:
    print(f"MessageBox failed: {e}")

print("Simple Win32 test completed!")