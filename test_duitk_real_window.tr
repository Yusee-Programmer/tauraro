# Test DUITK Real Window Display
print("Testing DUITK Real Window Display...")

import duitk

print("DUITK imported successfully!")

# Define a main window function
def create_main_window(app):
    # Create a window
    window = app.create_window("Real DUITK Window", 600, 400)
    
    # Create some controls
    button = window.create_button("Click Me!", 20, 20, 120, 30)
    label = window.create_label("This is a real window that should appear on your screen", 20, 70, 400, 25)
    edit = window.create_edit("You can type here", 20, 110, 200, 25)
    
    # Show the window
    window.show()
    
    print("Window created and should be visible!")
    print("Close the window to exit the application.")

# Run the application with a proper message loop
duitk.run_simple_app(create_main_window)