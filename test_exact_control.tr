#!/usr/bin/env tauraro

print("=== Control Flow ===")

age = 20
if age < 18:
    print("Minor")
elif age < 65:
    print("Adult")
else:
    print("Senior")

# While loop
count = 0
while count < 3:
    print(f"Count: {count}")
    count += 1

# For loop with range
for i in range(3):
    if i == 2:
        print(f"For loop: {i}")
    else:
        if i == 0 or i == 1:
            continue

print("Done")
