# Comprehensive Test: Multiple Builtin Modules
# Testing math, os, json, sys modules with various functions

import math
import os
import json
import sys

print("=== Comprehensive Module Test ===")
print()

# Math Module Tests
print("--- Math Module ---")
print("math.pi =", math.pi)
print("math.e =", math.e)
print("math.sqrt(25) =", math.sqrt(25))
print("math.pow(2, 8) =", math.pow(2, 8))
print("math.sin(0) =", math.sin(0))
print("math.cos(0) =", math.cos(0))
print()

# OS Module Tests
print("--- OS Module ---")
current_dir = os.getcwd()
print("Current directory:", current_dir)
print()

# JSON Module Tests
print("--- JSON Module ---")
test_data = {
    "name": "Tauraro",
    "version": "2.0",
    "features": ["fast", "native", "modular"]
}
json_string = json.dumps(test_data)
print("JSON dump:", json_string)

parsed_data = json.loads(json_string)
print("Parsed back:", parsed_data)
print()

# Sys Module Tests
print("--- Sys Module ---")
print("Python version:", sys.version)
print("Platform:", sys.platform)
print()

# Combined Test: Math calculations
print("--- Math Calculations ---")
radius = 5.0
area = math.pi * math.pow(radius, 2)
print("Circle area (r=5):", area)

# Factorial-like calculation
n = 5
result = 1
for i in range(1, n + 1):
    result = result * i
print("Factorial of 5:", result)
print()

print("=== All Tests Complete ===")
