# Test object-oriented programming features
print("Testing OOP features...")

# Basic class definition
class Person:
    def __init__(self, name, age):
        self.name = name
        self.age = age
    
    def introduce(self):
        return f"Hi, I'm {self.name} and I'm {self.age} years old"
    
    def have_birthday(self):
        self.age += 1
        return f"Happy birthday! Now I'm {self.age}"

# Create an instance
person = Person("Alice", 25)
print(person.introduce())

# Call method
print(person.have_birthday())

# Inheritance
class Student(Person):
    def __init__(self, name, age, grade):
        super().__init__(name, age)
        self.grade = grade
    
    def study(self):
        return f"{self.name} is studying in grade {self.grade}"

# Create student instance
student = Student("Bob", 16, 10)
print(student.introduce())
print(student.study())

print("All OOP tests passed!")