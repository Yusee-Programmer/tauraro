"""
WebViewTK Simple Test - Test HTML generation without GUI
This test verifies that the widget functions work correctly
"""

import webviewtk as wv

print("=== Testing WebViewTK HTML Generation ===\n")

# Test 1: Basic elements
print("1. Testing basic elements:")
h1 = wv.h1("Hello World")
print(f"   H1: {h1}")

p = wv.p("This is a paragraph")
print(f"   P: {p}")

div = wv.div("Content here", "container")
print(f"   DIV: {div}\n")

# Test 2: Button with classes
print("2. Testing button with classes:")
button = wv.button("Click Me", "btn btn-primary")
print(f"   {button}\n")

# Test 3: Input fields
print("3. Testing input fields:")
text_input = wv.input("text", "Enter name")
print(f"   {text_input}")

email_input = wv.input("email", "Enter email")
print(f"   {email_input}\n")

# Test 4: CDN links
print("4. Testing CDN links:")
tailwind = wv.cdn_tailwind()
print(f"   Tailwind: {tailwind[:80]}...")

bootstrap = wv.cdn_bootstrap()
print(f"   Bootstrap: {bootstrap[:80]}...\n")

# Test 5: Render function
print("5. Testing render function:")
combined = wv.render(
    wv.h1("Title"),
    wv.p("Paragraph 1"),
    wv.p("Paragraph 2")
)
print(f"   {combined[:100]}...\n")

# Test 6: Complex structure
print("6. Testing complex structure:")
form_content = wv.render(
    wv.label("Name:"),
    wv.input("text", "Your name"),
    wv.button("Submit", "btn")
)
form = wv.form(form_content, "/submit", "POST")
print(f"   {form[:120]}...\n")

print("=== All Tests Passed! ===")
