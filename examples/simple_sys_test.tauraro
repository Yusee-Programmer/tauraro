# Simple sys test
import sys

print("=== Simple Sys Test ===")

# Test basic sys information
print("Python version:", sys.version)
print("Platform:", sys.platform)

# Test command line arguments
print("Command line arguments:", sys.argv)

# Test path (without slicing)
print("Module search path length:", len(sys.path))

# Test maxsize
print("Max size:", sys.maxsize)

# Test byte order
print("Byte order:", sys.byteorder)

print("Simple sys test completed!")