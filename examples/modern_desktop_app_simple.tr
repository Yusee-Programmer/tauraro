# Simplified Modern Desktop App Example
# - Custom titlebar
# - Tailwind CSS
# - Basic interactivity

from webviewtk import (
    Window, Container, Column, Text, Center,
    mount_and_run, include_cdn, add_custom_js, CDN,
    CustomTitleBar
)

# Create window without native titlebar
window = Window(
    title="Modern Desktop App",
    width=1200,
    height=800,
    native_titlebar=False,
    resizable=True
)

# Include Tailwind CSS CDN
include_cdn(window, CDN.TAILWIND_CSS)

# Add custom JavaScript
custom_js = """
function showAlert(message) {
    alert(message);
}
"""

add_custom_js(window, custom_js)

