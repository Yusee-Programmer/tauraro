# Create the UI with CustomTitleBar
# All window control buttons are now functional!
ui = Column(children=[
    CustomTitleBar(
        title="Modern Desktop App",
        height=40,
        background_color="#690f74ff",  # Green titlebar
        text_color="#ffffff",         # White text
        show_minimize=True,  # ✅ Now functional!
        show_maximize=True,  # ✅ Now functional!
        show_close=True      # ✅ Functional
    ),
    Text(text=app_html, raw_html=True)
])

# Mount and run
