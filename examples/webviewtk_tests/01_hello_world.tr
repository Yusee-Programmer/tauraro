"""
WebViewTK Test 01: Hello World
Simple text display test
"""

from webviewtk import Window, Text, Center, mount_and_run

# Create simple UI
ui = Center(
    child=Text(
        "Hello, WebViewTK!",
        font_size=32.0,
        font_weight="bold",
        color="#2563eb"
    )
)

# Create and run window
window = Window(
    title="Test 01: Hello World",
    width=800,
    height=600
)

mount_and_run(window, ui)
