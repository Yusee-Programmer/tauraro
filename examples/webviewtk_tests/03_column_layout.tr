"""
WebViewTK Test 03: Column Layout
Test vertical layout with spacing and alignment
"""

from webviewtk import Window, Column, Text, Container, Center, EdgeInsets, mount_and_run

# Create vertical layout
ui = Center(
    child=Column(
        children=[
            Text("Item 1", font_size=24.0, color="#ef4444"),
            Text("Item 2", font_size=24.0, color="#f59e0b"),
            Text("Item 3", font_size=24.0, color="#10b981"),
            Text("Item 4", font_size=24.0, color="#3b82f6"),
            Text("Item 5", font_size=24.0, color="#8b5cf6")
        ],
        spacing=20.0,
        main_axis_alignment="center",
        cross_axis_alignment="center"
    )
)

window = Window(
    title="Test 03: Column Layout",
    width=800,
    height=600
)

mount_and_run(window, ui)
