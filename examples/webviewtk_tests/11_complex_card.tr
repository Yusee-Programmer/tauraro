"""
WebViewTK Test 11: Complex Card
Build a card-like component using basic widgets
"""

from webviewtk import Window, Column, Row, Container, Text, Center, EdgeInsets, SizedBox, mount_and_run

# Create a user profile card
def create_card(name, role, description):
    return Container(
        child=Column(
            children=[
                Row(
                    children=[
                        Container(
                            width=60.0,
                            height=60.0,
                            background_color="#8b5cf6",
                            border_radius="50%"
                        ),
                        SizedBox(width=15.0),
                        Column(
                            children=[
                                Text(name, font_size=20.0, font_weight="bold"),
                                Text(role, font_size=14.0, color="#6b7280")
                            ],
                            spacing=5.0,
                            cross_axis_alignment="start"
                        )
                    ]
                ),
                SizedBox(height=15.0),
                Text(description, font_size=14.0, color="#374151")
            ],
            spacing=5.0,
            cross_axis_alignment="start"
        ),
        padding="20px",
        background_color="#ffffff",
        border_radius="12px",
        border="1px solid #e5e7eb",
        style="box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);"
    )

# Build UI with multiple cards
ui = Center(
    child=Column(
        children=[
            Text("User Profile Cards", font_size=28.0, font_weight="bold"),
            SizedBox(height=30.0),
            
            create_card(
                "John Doe",
                "Software Engineer",
                "Building amazing applications with WebViewTK framework."
            ),
            
            SizedBox(height=20.0),
            
            create_card(
                "Jane Smith",
                "UI/UX Designer",
                "Creating beautiful and intuitive user interfaces."
            ),
            
            SizedBox(height=20.0),
            
            create_card(
                "Bob Johnson",
                "Product Manager",
                "Delivering products that users love and need."
            )
        ],
        cross_axis_alignment="stretch"
    )
)

window = Window(
    title="Test 11: Complex Card",
    width=600,
    height=800
)

mount_and_run(window, ui)
