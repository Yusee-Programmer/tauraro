"""
WebViewTK Test 05: Nested Layouts
Test Column inside Row and vice versa
"""

from webviewtk import Window, Column, Row, Container, Text, Center, EdgeInsets, mount_and_run

# Create nested layout
ui = Center(
    child=Column(
        children=[
            Text("Nested Layouts Demo", font_size=28.0, font_weight="bold"),
            Container(height=30.0),
            Row(
                children=[
                    Column(
                        children=[
                            Container(
                                child=Text("Box 1", color="#ffffff"),
                                padding="15px",
                                background_color="#ef4444",
                                border_radius="8px"
                            ),
                            Container(
                                child=Text("Box 2", color="#ffffff"),
                                padding="15px",
                                background_color="#f59e0b",
                                border_radius="8px"
                            )
                        ],
                        spacing=10.0
                    ),
                    Column(
                        children=[
                            Container(
                                child=Text("Box 3", color="#ffffff"),
                                padding="15px",
                                background_color="#10b981",
                                border_radius="8px"
                            ),
                            Container(
                                child=Text("Box 4", color="#ffffff"),
                                padding="15px",
                                background_color="#3b82f6",
                                border_radius="8px"
                            )
                        ],
                        spacing=10.0
                    )
                ],
                spacing=20.0
            )
        ],
        spacing=10.0,
        main_axis_alignment="center",
        cross_axis_alignment="center"
    )
)

window = Window(
    title="Test 05: Nested Layouts",
    width=800,
    height=600
)

mount_and_run(window, ui)
