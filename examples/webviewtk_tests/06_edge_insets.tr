"""
WebViewTK Test 06: EdgeInsets
Test all EdgeInsets variations
"""

from webviewtk import Window, Column, Container, Text, Center, EdgeInsets, Padding, mount_and_run

# Test different EdgeInsets
ui = Center(
    child=Column(
        children=[
            Text("EdgeInsets Tests", font_size=24.0, font_weight="bold"),
            Container(height=20.0),
            
            # CSS padding: all sides
            Container(
                child=Text("padding: 20px", color="#ffffff"),
                padding="20px",
                background_color="#ef4444",
                border_radius="8px"
            ),
            
            # CSS padding: vertical horizontal
            Container(
                child=Text("padding: 10px 30px", color="#ffffff"),
                padding="10px 30px",
                background_color="#10b981",
                border_radius="8px"
            ),
            
            # CSS padding: top right bottom left
            Container(
                child=Text("padding: 20px 0 0 40px", color="#ffffff"),
                padding="20px 0 0 40px",
                background_color="#3b82f6",
                border_radius="8px"
            ),
            
            # CSS padding: zero
            Container(
                child=Text("padding: 0", color="#ffffff"),
                padding="0",
                background_color="#8b5cf6",
                border_radius="8px"
            )
        ],
        spacing=15.0,
        cross_axis_alignment="center"
    )
)

window = Window(
    title="Test 06: EdgeInsets",
    width=800,
    height=600
)

mount_and_run(window, ui)
