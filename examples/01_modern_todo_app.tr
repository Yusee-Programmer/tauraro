# Modern Todo App with Custom Title Bar
# A beautiful task management app with custom window controls

from webviewtk import Window
import time

# Create frameless window
win = Window("Modern Todo App", 900, 700)
win.disable_decorations()

# App state
tasks = []
task_id_counter = 0

# Handler: Add new task
func handleAddTask(data):
    global task_id_counter, tasks
    task_id_counter = task_id_counter + 1
    task = {
        "id": task_id_counter,
        "text": data,
        "completed": False
    }
    tasks.append(task)
    print("Added task:", data)

# Handler: Toggle task completion
func handleToggleTask(data):
    global tasks
    task_id = int(data)
    for task in tasks:
        if task["id"] == task_id:
            task["completed"] = not task["completed"]
            print("Toggled task", task_id)
            break

# Handler: Delete task
func handleDeleteTask(data):
    global tasks
    task_id = int(data)
    tasks = [t for t in tasks if t["id"] != task_id]
    print("Deleted task", task_id)

# Register handlers
win.on_message("add_task", handleAddTask)
win.on_message("toggle_task", handleToggleTask)
win.on_message("delete_task", handleDeleteTask)

