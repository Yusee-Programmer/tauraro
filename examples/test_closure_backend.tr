# Test Tauraro closures as backend handlers
from webviewtk import Window, register_command

# Simple backend function
def add_numbers(args):
    a = args.get("a", 0)
    b = args.get("b", 0)
    result = a + b
    print(f"Backend: Adding {a} + {b} = {result}")
    return {"result": result, "operation": "addition"}

# Create window with custom titlebar
window = Window(
    title="Closure Test",
    width=600,
    height=400,
    native_titlebar=False
)

# Register backend command
register_command(window, "addNumbers", add_numbers)

