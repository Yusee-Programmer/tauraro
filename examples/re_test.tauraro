# RE (Regular Expressions) module test
import re

print("=== RE Module Test ===")

# Test basic pattern matching
text = "The quick brown fox jumps over the lazy dog"
pattern = r"fox"
match = re.search(pattern, text)
print("Search result:", match)
if match:
    print("Match found at position:", match.start(), "-", match.end())
    print("Matched text:", match.group())

# Test findall
numbers_text = "Phone numbers: 123-456-7890, 987-654-3210"
phone_pattern = r"\d{3}-\d{3}-\d{4}"
phones = re.findall(phone_pattern, numbers_text)
print("Found phone numbers:", phones)

# Test substitution
sentence = "The color of the sky is blue"
new_sentence = re.sub(r"blue", "green", sentence)
print("Substituted text:", new_sentence)

# Test split
csv_line = "apple,banana,cherry,date"
items = re.split(r",", csv_line)
print("Split items:", items)

# Test compile
compiled_pattern = re.compile(r"\b\w{5}\b")  # Words with exactly 5 letters
long_text = "Python is great for programming and data science"
matches = compiled_pattern.findall(long_text)
print("Words with 5 letters:", matches)

# Test groups
email_text = "Contact: john.doe@example.com or jane.smith@company.org"
email_pattern = r"(\w+\.\w+)@(\w+\.\w+)"
email_matches = re.findall(email_pattern, email_text)
print("Email matches:", email_matches)

# Test flags
case_text = "Python PYTHON python"
case_insensitive = re.findall(r"python", case_text, re.IGNORECASE)
print("Case insensitive matches:", case_insensitive)

print("RE module test completed successfully!")