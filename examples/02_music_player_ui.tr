# Music Player UI with Custom Title Bar
# Modern music player interface with custom window controls

from webviewtk import Window
import time

# Create frameless window
win = Window("Music Player", 1000, 650)
win.disable_decorations()

# Player state
current_track = 0
is_playing = False
volume = 70

# Handlers
func handlePlay(data):
    global is_playing
    is_playing = True
    print("‚ñ∂ Playing")

func handlePause(data):
    global is_playing
    is_playing = False
    print("‚è∏ Paused")

func handleNext(data):
    global current_track
    current_track = current_track + 1
    print("‚è≠ Next track:", current_track)

func handlePrevious(data):
    global current_track
    if current_track > 0:
        current_track = current_track - 1
    print("‚èÆ Previous track:", current_track)

func handleVolume(data):
    global volume
    volume = int(data)
    print("üîä Volume:", volume)

func handleSeek(data):
    print("‚è© Seek to:", data)

# Register handlers
win.on_message("play", handlePlay)
win.on_message("pause", handlePause)
win.on_message("next", handleNext)
win.on_message("previous", handlePrevious)
win.on_message("volume", handleVolume)
win.on_message("seek", handleSeek)

