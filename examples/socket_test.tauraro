# Socket module test
import socket

print("=== Socket Module Test ===")

# Test socket creation
try:
    # Create a TCP socket
    tcp_socket = socket.socket(socket.AF_INET, socket.SOCK_STREAM)
    print("TCP socket created successfully")
    
    # Create a UDP socket
    udp_socket = socket.socket(socket.AF_INET, socket.SOCK_DGRAM)
    print("UDP socket created successfully")
    
    # Close sockets
    tcp_socket.close()
    udp_socket.close()
    print("Sockets closed successfully")
    
except Exception as e:
    print("Socket creation error:", e)

# Test address family and socket types
print("Address families:")
print("AF_INET:", socket.AF_INET)
print("AF_INET6:", socket.AF_INET6)

print("Socket types:")
print("SOCK_STREAM:", socket.SOCK_STREAM)
print("SOCK_DGRAM:", socket.SOCK_DGRAM)

# Test hostname functions
try:
    hostname = socket.gethostname()
    print("Hostname:", hostname)
    
    ip_address = socket.gethostbyname(hostname)
    print("IP Address:", ip_address)
    
except Exception as e:
    print("Hostname resolution error:", e)

print("Socket module test completed successfully!")