"""
WebViewTK Example - Demonstrates the cross-platform GUI framework
This example shows how to build a modern web-based UI using Tauraro
"""

import webviewtk as wv

# Example 1: Simple Hello World
def example_simple():
    print("=== Example 1: Simple Hello World ===")

    # Create HTML elements
    heading = wv.h1("Hello, WebViewTK!", "text-center")
    paragraph = wv.p("This is a simple example using Tauraro's WebViewTK framework.")

    # Combine HTML
    content = wv.render(heading, paragraph)
    print(content)
    print()

# Example 2: Using Tailwind CSS
def example_tailwind():
    print("=== Example 2: Using Tailwind CSS ===")

    # Include Tailwind CSS CDN
    tailwind = wv.cdn_tailwind()

    # Create styled elements
    container = wv.div(
        wv.render(
            wv.h1("Styled with Tailwind", "text-4xl font-bold text-blue-600 mb-4"),
            wv.p("This uses Tailwind CSS classes for styling.", "text-gray-700 mb-2"),
            wv.button("Click Me", "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded")
        ),
        "container mx-auto p-8"
    )

    # Build full HTML
    head_content = wv.render(
        wv.title("Tailwind Example"),
        tailwind
    )

    body_content = container

    html = wv.html(
        wv.render(
            wv.head(head_content),
            wv.body(body_content)
        )
    )

    print(html)
    print()

# Example 3: Bootstrap Form
def example_bootstrap_form():
    print("=== Example 3: Bootstrap Form ===")

    # Include Bootstrap CDN
    bootstrap = wv.cdn_bootstrap()

    # Create form elements
    name_input = wv.input("text", "Enter your name", "form-control", "nameInput")
    email_input = wv.input("email", "Enter your email", "form-control", "emailInput")
    message_textarea = wv.textarea("", "form-control", "messageInput")
    submit_button = wv.button("Submit", "btn btn-primary")

    # Build form
    form_content = wv.render(
        wv.div(
            wv.render(
                wv.label("Name", "nameInput", "form-label"),
                name_input
            ),
            "mb-3"
        ),
        wv.div(
            wv.render(
                wv.label("Email", "emailInput", "form-label"),
                email_input
            ),
            "mb-3"
        ),
        wv.div(
            wv.render(
                wv.label("Message", "messageInput", "form-label"),
                message_textarea
            ),
            "mb-3"
        ),
        submit_button
    )

    form = wv.form(form_content, "", "POST", "container mt-5")

    # Build full page
    head_content = wv.render(
        wv.title("Bootstrap Form"),
        wv.meta({"charset": "utf-8"}),
        wv.meta({"name": "viewport", "content": "width=device-width, initial-scale=1"}),
        bootstrap
    )

    body_content = wv.render(
        wv.h1("Contact Form", "text-center my-4"),
        form
    )

    html = wv.html(
        wv.render(
            wv.head(head_content),
            wv.body(body_content)
        )
    )

    print(html[:500] + "...")
    print()

# Example 4: Complex Layout
def example_complex_layout():
    print("=== Example 4: Complex Layout with Semantic HTML ===")

    # Create navigation
    nav_content = wv.render(
        wv.link("Home", "#home", "nav-link"),
        wv.link("About", "#about", "nav-link"),
        wv.link("Contact", "#contact", "nav-link")
    )
    navigation = wv.nav(nav_content, "navbar")

    # Create header
    header_content = wv.h1("My Website", "site-title")
    header = wv.header(header_content, "site-header")

    # Create main content sections
    about_section = wv.section(
        wv.render(
            wv.h2("About Us"),
            wv.p("We build amazing web applications with Tauraro.")
        ),
        "about-section",
        "about"
    )

    # Create article with image
    article_content = wv.render(
        wv.h3("Latest News"),
        wv.img("news-image.jpg", "News image", "article-img"),
        wv.p("Check out our latest updates and features.")
    )
    article = wv.article(article_content, "news-article")

    # Create aside
    aside_content = wv.render(
        wv.h4("Quick Links"),
        wv.ul(
            wv.render(
                wv.li("Documentation"),
                wv.li("Examples"),
                wv.li("Community")
            )
        )
    )
    aside = wv.aside(aside_content, "sidebar")

    # Create footer
    footer_content = wv.p("Â© 2025 Tauraro WebViewTK", "footer-text")
    footer = wv.footer(footer_content, "site-footer")

    # Combine all sections
    main_content = wv.main(
        wv.render(about_section, article)
    )

    body_content = wv.render(
        navigation,
        header,
        main_content,
        aside,
        footer
    )

    # Add custom CSS
    custom_css = """
        body { font-family: Arial, sans-serif; margin: 0; padding: 0; }
        .navbar { background-color: #333; padding: 1rem; }
        .nav-link { color: white; margin: 0 1rem; text-decoration: none; }
        .site-header { background-color: #4CAF50; color: white; padding: 2rem; text-align: center; }
        .site-footer { background-color: #333; color: white; padding: 1rem; text-align: center; }
    """

    head_content = wv.render(
        wv.title("Complex Layout Example"),
        wv.style(custom_css)
    )

    html = wv.html(
        wv.render(
            wv.head(head_content),
            wv.body(body_content)
        )
    )

    print(html[:600] + "...")
    print()

# Example 5: Interactive Dashboard with Alpine.js
def example_dashboard():
    print("=== Example 5: Interactive Dashboard ===")

    # Include Alpine.js CDN
    alpine = wv.cdn_alpine()
    tailwind = wv.cdn_tailwind()

    # Create dashboard cards with Alpine.js interactivity
    dashboard_script = """
    <script>
        function dashboard() {
            return {
                users: 1250,
                revenue: 45680,
                orders: 892
            }
        }
    </script>
    """

    card1 = wv.div(
        wv.render(
            wv.h3("Total Users", "text-lg font-semibold"),
            wv.p("1,250", "text-3xl font-bold text-blue-600")
        ),
        "bg-white p-6 rounded-lg shadow-md"
    )

    card2 = wv.div(
        wv.render(
            wv.h3("Revenue", "text-lg font-semibold"),
            wv.p("$45,680", "text-3xl font-bold text-green-600")
        ),
        "bg-white p-6 rounded-lg shadow-md"
    )

    card3 = wv.div(
        wv.render(
            wv.h3("Orders", "text-lg font-semibold"),
            wv.p("892", "text-3xl font-bold text-purple-600")
        ),
        "bg-white p-6 rounded-lg shadow-md"
    )

    dashboard_grid = wv.div(
        wv.render(card1, card2, card3),
        "grid grid-cols-1 md:grid-cols-3 gap-6 p-8"
    )

    head_content = wv.render(
        wv.title("Dashboard"),
        tailwind,
        alpine
    )

    body_content = wv.render(
        wv.h1("Analytics Dashboard", "text-4xl font-bold text-center my-8"),
        dashboard_grid,
        dashboard_script
    )

    html = wv.html(
        wv.render(
            wv.head(head_content),
            wv.body(body_content, "bg-gray-100 min-h-screen")
        )
    )

    print(html[:500] + "...")
    print()

# Example 6: Create and Run a Window
def example_window():
    print("=== Example 6: Creating a Window (requires webviewtk feature) ===")

    # Build a complete HTML page
    tailwind = wv.cdn_tailwind()

    app_content = wv.div(
        wv.render(
            wv.h1("Welcome to Tauraro!", "text-5xl font-bold text-center text-blue-600 mb-4"),
            wv.p(
                "This is a cross-platform GUI application built with WebViewTK.",
                "text-xl text-center text-gray-700 mb-8"
            ),
            wv.div(
                wv.render(
                    wv.button("Primary", "bg-blue-500 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded mr-2"),
                    wv.button("Secondary", "bg-gray-500 hover:bg-gray-700 text-white font-bold py-3 px-6 rounded")
                ),
                "text-center"
            )
        ),
        "container mx-auto p-8 flex flex-col justify-center h-screen"
    )

    head_content = wv.render(
        wv.title("Tauraro WebViewTK App"),
        wv.meta({"charset": "utf-8"}),
        wv.meta({"name": "viewport", "content": "width=device-width, initial-scale=1"}),
        tailwind
    )

    body_content = app_content

    full_html = "<!DOCTYPE html>" + wv.html(
        wv.render(
            wv.head(head_content),
            wv.body(body_content, "bg-gradient-to-br from-blue-50 to-purple-50")
        )
    )

    # Create window
    window = wv.Window("Tauraro WebViewTK Demo", 1024, 768)
    window.set_html(full_html)

    print("Window created successfully!")
    print("Note: To actually display the window, call window.run()")
    print("This requires compiling with --features webviewtk")
    print()

    # Uncomment to run the window (requires webviewtk feature enabled)
    # window.run()

# Run all examples
def main():
    print("WebViewTK Framework Examples")
    print("=" * 50)
    print()

    example_simple()
    example_tailwind()
    example_bootstrap_form()
    example_complex_layout()
    example_dashboard()
    example_window()

    print("=" * 50)
    print("All examples completed!")
    print()
    print("To create an actual window, compile Tauraro with:")
    print("  cargo build --features webviewtk")
    print()
    print("Then run:")
    print("  ./target/debug/tauraro.exe run examples/test_webviewtk.py")

if __name__ == "__main__":
    main()
