"""
Simple test to display a window using WebViewTK
"""

import webviewtk as wv

# Build a simple HTML page
tailwind = wv.cdn_tailwind()

app_content = wv.div(
    wv.render(
        wv.h1("Hello from Tauraro WebViewTK!", "text-5xl font-bold text-center text-blue-600 mb-4"),
        wv.p(
            "This is a cross-platform GUI window built with Tauraro!",
            "text-xl text-center text-gray-700 mb-8"
        ),
        wv.div(
            wv.render(
                wv.button("Button 1", "bg-blue-500 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded mr-2"),
                wv.button("Button 2", "bg-green-500 hover:bg-green-700 text-white font-bold py-3 px-6 rounded mr-2"),
                wv.button("Button 3", "bg-red-500 hover:bg-red-700 text-white font-bold py-3 px-6 rounded")
            ),
            "text-center"
        )
    ),
    "container mx-auto p-8 flex flex-col justify-center h-screen"
)

head_content = wv.render(
    wv.title("Tauraro WebViewTK Demo"),
    wv.meta({"charset": "utf-8"}),
    wv.meta({"name": "viewport", "content": "width=device-width, initial-scale=1"}),
    tailwind
)

body_content = app_content

full_html = "<!DOCTYPE html>" + wv.html(
    wv.render(
        wv.head(head_content),
        wv.body(body_content, "bg-gradient-to-br from-blue-50 to-purple-50")
    )
)

# Create and display the window
print("Creating window...")
window = wv.Window("Tauraro WebViewTK Demo", 1024, 768)
window.set_html(full_html)
print("Window created successfully!")
print("Displaying window...")
window.run()
