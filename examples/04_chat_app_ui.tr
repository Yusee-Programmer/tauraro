# Chat Application UI with Custom Title Bar
# Modern messaging app interface

from webviewtk import Window
import time

# Create frameless window
win = Window("Chat App", 1000, 700)
win.disable_decorations()

# Chat state
messages = []
current_user = "You"

# Handlers
func handleSendMessage(data):
    global messages
    message = {
        "user": current_user,
        "text": data,
        "time": "Just now"
    }
    messages.append(message)
    print("üí¨ Message sent:", data)

func handleTyping(data):
    print("‚úèÔ∏è User typing...")

func handleCallVoice(data):
    print("üìû Voice call initiated")

func handleCallVideo(data):
    print("üìπ Video call initiated")

# Register handlers
win.on_message("send_message", handleSendMessage)
win.on_message("typing", handleTyping)
win.on_message("call_voice", handleCallVoice)
win.on_message("call_video", handleCallVideo)

